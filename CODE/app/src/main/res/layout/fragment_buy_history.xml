<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="70dp"
    android:orientation="vertical"
    tools:context=".Fragment.BuyHistory">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/buy_history_string"
        android:textAlignment="center"
        android:textColor="@color/app_white"
        android:textSize="@dimen/font_extreme"
        android:textStyle="bold"
        android:background="@drawable/rectangular_red"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_drop_shadow" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buy_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</LinearLayout>