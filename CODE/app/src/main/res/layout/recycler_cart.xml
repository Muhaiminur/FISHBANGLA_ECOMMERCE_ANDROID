<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="2"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/zero"
                android:src="@drawable/ic_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/cart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_string"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/font_huge" />

            <TextView
                android:id="@+id/cart_minimum_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/min_buy_string"
                android:textColor="@color/app_hint"
                android:textSize="@dimen/font_xl" />

            <TextView
                android:id="@+id/cart_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/single_seller_string"
                android:textColor="@color/app_hint"
                android:textSize="@dimen/font_xl" />

            <TextView
                android:id="@+id/cart_fish_single_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_string"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_huge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cart_minus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/cart_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/zero"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/font_extreme" />

                <Button
                    android:id="@+id/cart_plus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_plus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/unit_unit_string"
                    android:textColor="@color/app_hint2"
                    android:textSize="@dimen/font_xl" />
            </LinearLayout>

            <TextView
                android:id="@+id/cart_fish_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_string"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_big" />
        </LinearLayout>

        <Button
            android:id="@+id/cart_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_delete" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_hint" />
</LinearLayout>