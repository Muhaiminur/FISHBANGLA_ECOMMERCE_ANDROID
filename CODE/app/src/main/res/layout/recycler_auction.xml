<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auction_list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/app_white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangular_red_border"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/auction_list_image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:contentDescription="@string/submit_string"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_fishred" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/auction_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_string"
                android:textColor="@color/app_green"
                android:textSize="@dimen/font_extra" />

            <TextView
                android:id="@+id/auction_list_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_string"
                android:textColor="@color/imagepicker_black"
                android:textSize="@dimen/font_huge" />

            <TextView
                android:id="@+id/auction_list_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address_address1_string"
                android:textColor="@color/app_hint2"
                android:textSize="@dimen/font_huge" />

            <TextView
                android:id="@+id/auction_list_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address_address1_string"
                android:textColor="@color/app_hint2"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>